    <androidx.cardview.widget.CardView
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Write something here . . . ."
                android:layout_marginBottom="30dp"
                android:background="@null"
                android:gravity="start"
                android:minLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_1"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>


            <ImageView
                android:id="@+id/delete_button1"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_below="@id/et_1"
                android:layout_marginHorizontal="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/delete_icon"
                />

            <ImageView
                android:id="@+id/speaker_button1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/et_1"
                android:layout_gravity="end"
                android:layout_toStartOf="@+id/delete_button1"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/sound_icon" />

            <ImageView
                android:id="@+id/copy_button1"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="end"
                android:layout_below="@id/et_1"
                android:layout_toStartOf="@+id/speaker_button1"
                android:src="@drawable/copy_icon"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Write something here . . . ."
                android:layout_marginBottom="30dp"
                android:background="@null"
                android:gravity="start"
                android:minLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_2"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>


            <ImageView
                android:id="@+id/delete_button"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_below="@id/et_2"
                android:layout_marginHorizontal="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/delete_icon"
                />

            <ImageView
                android:id="@+id/speaker_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/et_2"
                android:layout_gravity="end"
                android:layout_toStartOf="@+id/delete_button"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/sound_icon" />

            <ImageView
                android:id="@+id/copy_button"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="end"
                android:layout_below="@id/et_2"
                android:layout_toStartOf="@+id/speaker_button"
                android:src="@drawable/copy_icon"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/upgrade_icon"
        android:layout_gravity="end"
        android:background="#00FFFFFF"
        android:layout_marginEnd="23dp"
        android:elevation="8dp"
        />

</LinearLayout>